@model IEnumerable<UI.Models.UserDTO>

@{
    ViewBag.Title = "GetFollowing";
    //Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<h2>My following list:</h2>

@if (Model != null && Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Options
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("UnFollow", "UnFollowUser", new { targetUserId = item.UserId }) |
                    @Html.ActionLink("Block", "BlockUser", new { targetUserId = item.UserId }) |
                </td>
            </tr>
        }
    </table>
}
else
{
    <h2>You are not following any users at this time.</h2>
}
