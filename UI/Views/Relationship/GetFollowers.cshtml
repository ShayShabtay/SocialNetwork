@model IEnumerable<UI.Models.UserDTO>

@{
    ViewBag.Title = "GetFollowers";
    //Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<h2>My followers list:</h2>

@if (Model != null && Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Options
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Block", "Edit", new { targetUserId = item.UserId }) |
                @Html.ActionLink("Follow back", "Details", new { targetUserId = item.UserId }) |
            </td>
        </tr>
        }

    </table>
}
else
{
    <h2>No one is following you right now.</h2>
}
