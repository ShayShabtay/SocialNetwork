@using UI.Models
@model UI.Models.SocialViewModel

@{
    UI.SignalR.SignalRClient client = new UI.SignalR.SignalRClient(Model);
    client.Login("testUser");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Facelook Site</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/HomeIndexCSS.css" rel="stylesheet" />
    <link rel="SHORTCUT ICON" href="data:image/png;base64," />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.8.3.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/Search.js"></script>
    <link href="~/Content/search.css" rel="stylesheet" />
    <style>
        /* Remove the navbar's default margin-bottom and rounded borders */
        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }

        /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
        .row.content {
            height: 450px
        }

        /* Set gray background color and 100% height */
        .sidenav {
            padding-top: 20px;
            background-color: lightgray;
            height: 100%;
        }

        /* Set black background color, white text and some padding */
        footer {
            background-color: royalblue;
            color: white;
            padding: 15px;
        }

        /* On small screens, set height to 'auto' for sidenav and grid */
        @@media screen and (max-width: 767px) {
            .sidenav {
                height: auto;
                padding: 15px;
            }

            .row.content {
                height: auto;
            }
        }
    </style>
</head>
<body>

    <nav id="navID" class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Facelook", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", id = "FacelookApplicationID" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "MainPageAfterLogin", "Home", null, new { @id = "MenuNavbarID" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @id = "MenuNavbarID" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @id = "MenuNavbarID" })</li>
                    <li>@Html.ActionLink("Settings", "Settings", "Home", null, new { @id = "MenuNavbarID" })</li>
                    <li>@Html.ActionLink("Notifactions", "Notifactions", "Home", null, new { @id = "NotifactionsMenuNavbarID" })</li>
                    @*<i class="fas fa-cogs"></i>*@
                </ul>
                @*<form class="navbar-form navbar-left" action="/action_page.php">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="search">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>*@

                <div class="dropdown">
                    <button onclick="myFunction()" class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                        @Ajax.ActionLink("Search", "GetAllUsers", "Relationship", null, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "x", InsertionMode = InsertionMode.Replace }) &nbsp;
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    <div id="myDropdown" class="dropdown-content">
                        <input type="text" placeholder="Search.." id="myInput" onkeyup="filterFunction()">
                        <div id="x"></div>
                    </div>
                </div>

                @Html.Partial("_LoginPartial", new { @id = "MenuNavbarID" })

            </div>
        </div>
    </nav>

    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-2 sidenav">
                <h3 style="text-align:center">
                    <i class="fas fa-info-circle" style="color:blue;"></i>
                    User Info
                </h3><hr />
                @if (Model != null)
                {
                    <p><b>Name:</b> @Model.UserIdentityModel.Name </p>
                    <p><b>Age:</b> @Model.UserIdentityModel.Age  </p>
                    <p><b>Address:</b> @Model.UserIdentityModel.Address</p>
                    <p><b>Work Place:</b>@Model.UserIdentityModel.WorkPlace</p>
                }
                else if (Request.Cookies["My_Name"].Value != null)
                {
                    <p><b>Name:</b> @Request.Cookies["My_Name"].Value </p>
                    <p><b>Age:</b> @Request.Cookies["My_Age"].Value </p>
                    <p><b>Address:</b> @Request.Cookies["My_Address"].Value </p>
                    <p><b>Work Place:</b> @Request.Cookies["My_WorkPlace"].Value </p>
                }

                else
                {
                    <p><b>Name:</b></p>
                    <p><b>Age:</b> </p>
                    <p><b>Address:</b> </p>
                    <p><b>Work Place:</b></p>
                }

                <br /><br />
                <h4>@Html.ActionLink("To View/ Edit My Profile", "GetUserProfile", "Identity")</h4>
            </div>
            <div class="col-sm-8 text-left">
                <div class="container body-content">
                    @RenderBody()
                    <hr />
                </div>
            </div>
            <div class="col-sm-2 sidenav sidenav">
                <h3 style="text-align:center">
                    <i class="fas fa-bell" style="color:yellow"></i>
                    Notifications
                </h3><hr />
                <div class="well">
                    @*@Html.Action("updateList", "Social", Model);*@
                    <p>You recieve a message</p>
                </div>


                    @{Model.waitForRes();}
                    @{if (Model.Notifications.Count != 0)
                      {
                            @*@:<p>@Model.Notifications[0].ToString()</p>*@


                        foreach (var item in Model.Notifications)
                         {
                         <div class="well">
                            <p>@item.ToString();</p>
                            </div>

                         }



                      }
                    }
                    <div class="well">
                        <p>someone send you a friend request</p>
                    </div>
                </div>
            </div>
    </div>


    <footer class="container-fluid text-center navbar-fixed-bottom">
        <p>&copy; 2018 - Our Facelook Application - Develop by <mark>Shay Shabtay</mark>  & <mark>Ariel Halevi</mark> & <mark>Omer Carmeli</mark>  </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script>

    </script>
</body>
</html>
