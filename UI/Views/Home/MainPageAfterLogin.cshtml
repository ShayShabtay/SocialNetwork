
@{
    ViewBag.Title = "MainPageAfterLogin";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<h2>
    Facel<img src="https://media.tenor.com/images/a507d6519065e444ce004fa2f37f2689/tenor.gif"
              width="60" height="60" />k - Main page
</h2><hr />

<!-- Trigger the modal with a button -->
<div class="container">
    <div class="panel panel-primary" data-toggle="modal" data-target="#myModal"
         style="width: 800px">
        <div class="panel-heading">Create Post</div>

        <div class="panel-body">
            <div>
                What's on yout mind, @User.Identity.Name ? <br />
            </div>
            <hr />
            <button type="button" class="btn btn-primary">Share</button>
            <button type="button" class="btn btn-success">Add Photo</button>
            <button type="button" class="btn btn-info">Tag Friends</button>
        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create Post</h4>
            </div>
            <div class="modal-body">
                <textarea class="form-control" style="min-width: 90%; min-height: 80%" placeholder="What's on yout mind, @User.Identity.Name ?">
    
                </textarea> 
            </div>
            <div class="modal-footer">
                <div class="input-group">
                    <button type="button" class="btn btn-primary">Share</button>
                    @*<button type="button" class="btn btn-success"> Add Photo</button>*@
                    @*<input class="custom-file-input" value="Add Photo input" />*@

                    <button type="button" class="btn btn-info">Tag Friends</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>


                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile04">
                        @*<label class="custom-file-label" for="inputGroupFile04">Choose file</label>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>